{% extends "layout.twig" %}

{% block content %}
	<div
		class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
		<!-- Hero Section with Wave Background -->
		<div class="relative bg-gradient-to-r from-blue-600 to-purple-600 text-white overflow-hidden">
			<div
				class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-20 relative z-10">
				<!-- Decorative Circles -->
				<div class="absolute top-10 right-10 w-32 h-32 bg-white opacity-10 rounded-full"></div>
				<div class="absolute bottom-20 left-10 w-24 h-24 bg-purple-400 opacity-20 rounded-full"></div>

				<div class="text-center max-w-3xl mx-auto">
					<h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
						TicketFlow
					</h1>
					<p class="text-lg sm:text-xl mb-8 opacity-90">
						Streamline your support workflow with intelligent ticket management. 
						                    Track, manage, and resolve customer issues effortlessly.
					</p>
					<div class="flex gap-4 justify-center flex-wrap">
						<a href="/login" class="px-8 py-3 bg-white text-blue-600 rounded-lg font-semibold hover:bg-gray-100 transition shadow-lg hover:shadow-xl transform hover:scale-105">
							Login
						</a>
						<a href="/signup" class="px-8 py-3 bg-purple-500 text-white rounded-lg font-semibold hover:bg-purple-600 transition shadow-lg hover:shadow-xl transform hover:scale-105">
							Get Started
						</a>
					</div>
				</div>
			</div>

			<!-- Wave SVG -->
			<svg class="absolute bottom-0 w-full h-20 md:h-24" viewbox="0 0 1440 120" preserveaspectratio="none">
				<path d="M0,64 C360,100 720,20 1440,64 L1440,120 L0,120 Z" fill="white"/>
			</svg>
		</div>

		<!-- Features Section -->
		<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
			<h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
				Why Choose TicketFlow?
			</h2>
			<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
				{% set features = [
                {
                    'title': 'Easy Tracking',
                    'description': 'Monitor all tickets in one centralized dashboard with real-time status updates and comprehensive overview.'
                },
                {
                    'title': 'Smart Organization',
                    'description': 'Categorize and prioritize tickets efficiently to handle urgent issues first and maintain workflow.'
                },
                {
                    'title': 'Team Collaboration',
                    'description': 'Work together seamlessly to resolve customer issues faster than ever with shared visibility.'
                }
            ] %}

				{% for feature in features %}
					<div class="bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300">
						<div class="w-12 h-12 bg-blue-100 rounded-full mb-4 flex items-center justify-center">
							<div class="w-6 h-6 bg-blue-500 rounded-full"></div>
						</div>
						<h3 class="text-xl font-semibold mb-3 text-gray-800">
							{{ feature.title }}
						</h3>
						<p class="text-gray-600 leading-relaxed">
							{{ feature.description }}
						</p>
					</div>
				{% endfor %}
			</div>
		</div>

		<!-- Additional Decorative Circle -->
		<div class="relative max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
			<div class="absolute top-0 right-20 w-16 h-16 bg-purple-200 rounded-full opacity-40"></div>
		</div>

		<!-- Footer -->
		<footer class="bg-gray-800 text-white py-8 mt-16">
			<div class="max-w-screen-xl mx-auto px-4 text-center">
				<p class="text-gray-300 mb-2">
					&copy; 2025 TicketFlow. All rights reserved.
				</p>
				<p class="text-gray-400 text-sm">
					Demo credentials - Email: demo@test.com | Password: password
				</p>
			</div>
		</footer>
	</div>
{% endblock %}
