{% extends "layout.twig" %}

{% block title %}Dashboard - TicketFlow
{% endblock %}

{% block content %}
	<div
		class="min-h-screen bg-gray-50">
		<!-- Navigation Bar -->
		<nav class="bg-white shadow-sm">
			<div class="max-w-screen-xl mx-auto px-4 py-4 flex justify-between items-center">
				<h1 class="text-2xl font-bold text-blue-600">TicketFlow</h1>
				<div class="flex items-center gap-4">
					<span class="text-gray-600 text-sm hidden sm:inline">
						{{ user.email }}
					</span>
					<a href="/logout" class="flex items-center gap-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition shadow-md hover:shadow-lg">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
						</svg>
						<span class="hidden sm:inline">Logout</span>
					</a>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<div class="max-w-screen-xl mx-auto px-4 py-8">
			<h2 class="text-3xl font-bold mb-8 text-gray-800">
				Dashboard Overview
			</h2>

			<!-- Statistics Cards -->
			<div
				class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
				<!-- Total Tickets -->
				<div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition">
					<div class="text-gray-600 text-sm font-medium mb-2">
						Total Tickets
					</div>
					<div class="text-4xl font-bold text-gray-800">
						{{ stats.total }}
					</div>
					<div class="mt-2 text-xs text-gray-500">All time</div>
				</div>

				<!-- Open Tickets -->
				<div class="bg-green-50 p-6 rounded-xl shadow-md border-l-4 border-green-500 hover:shadow-lg transition">
					<div class="text-green-700 text-sm font-medium mb-2">Open</div>
					<div class="text-4xl font-bold text-green-700">
						{{ stats.open }}
					</div>
					<div class="mt-2 text-xs text-green-600">Awaiting action</div>
				</div>

				<!-- In Progress Tickets -->
				<div class="bg-amber-50 p-6 rounded-xl shadow-md border-l-4 border-amber-500 hover:shadow-lg transition">
					<div class="text-amber-700 text-sm font-medium mb-2">
						In Progress
					</div>
					<div class="text-4xl font-bold text-amber-700">
						{{ stats.in_progress }}
					</div>
					<div class="mt-2 text-xs text-amber-600">Being worked on</div>
				</div>

				<!-- Closed Tickets -->
				<div class="bg-gray-100 p-6 rounded-xl shadow-md border-l-4 border-gray-500 hover:shadow-lg transition">
					<div class="text-gray-700 text-sm font-medium mb-2">Closed</div>
					<div class="text-4xl font-bold text-gray-700">
						{{ stats.closed }}
					</div>
					<div class="mt-2 text-xs text-gray-600">Resolved</div>
				</div>
			</div>

			<!-- Quick Actions Card -->
			<div class="bg-white p-8 rounded-xl shadow-md">
				<h3 class="text-xl font-semibold mb-4 text-gray-800">
					Quick Actions
				</h3>
				<p class="text-gray-600 mb-6">
					Manage your support tickets efficiently. Create, edit, and track all your tickets in one place.
				</p>
				<a href="/tickets" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition shadow-md hover:shadow-lg transform hover:scale-105">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
					</svg>
					Manage Tickets
				</a>
			</div>
		</div>

		<!-- Footer -->
		<footer class="bg-gray-800 text-white py-6 mt-16">
			<div class="max-w-screen-xl mx-auto px-4 text-center">
				<p class="text-gray-300">
					&copy; 2025 TicketFlow. All rights reserved.
				</p>
			</div>
		</footer>
	</div>
{% endblock %}
