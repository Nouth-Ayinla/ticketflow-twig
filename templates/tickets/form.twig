{% extends "layout.twig" %}

{% block title %}
	{{ action == 'create' ? 'Create' : 'Edit' }}
	Ticket - TicketFlow
{% endblock %}

{% block content %}
	<div
		class="min-h-screen bg-gray-50">
		<!-- Navigation Bar -->
		<nav class="bg-white shadow-sm">
			<div class="max-w-screen-xl mx-auto px-4 py-4 flex justify-between items-center">
				<h1 class="text-2xl font-bold text-blue-600">TicketFlow</h1>
				<div class="flex items-center gap-2">
					<a href="/dashboard" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition">
						Dashboard
					</a>
					<a href="/tickets" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition">
						Tickets
					</a>
					<a href="/logout" class="flex items-center gap-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition shadow-md">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
						</svg>
						<span class="hidden sm:inline">Logout</span>
					</a>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<div class="max-w-screen-xl mx-auto px-4 py-8">
			<div
				class="max-w-2xl mx-auto">
				<!-- Header -->
				<h2 class="text-3xl font-bold mb-8 text-gray-800">
					{{ action == 'create' ? 'Create New Ticket' : 'Edit Ticket' }}
				</h2>

				<!-- Form -->
				<div class="bg-white p-6 rounded-xl shadow-lg border-2 border-blue-200">
					<form
						method="POST" class="ticket-form space-y-4">
						<!-- Title Field -->
						<div>
							<label for="title" class="block text-sm font-medium text-gray-700 mb-1">
								Title
								<span class="text-red-500">*</span>
							</label>
							<input type="text" id="title" name="title" value="{{ ticket.title|default('') }}" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none" placeholder="Enter ticket title"/>
						</div>

						<!-- Description Field -->
						<div>
							<label for="description" class="block text-sm font-medium text-gray-700 mb-1">
								Description
							</label>
							<textarea id="description" name="description" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none resize-none" placeholder="Describe the issue or request">{{ ticket.description|default('') }}</textarea>
						</div>

						<div
							class="grid sm:grid-cols-2 gap-4">
							<!-- Status Field -->
							<div>
								<label for="status" class="block text-sm font-medium text-gray-700 mb-1">
									Status
									<span class="text-red-500">*</span>
								</label>
								<select id="status" name="status" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none">
									<option value="open" {{ ticket.status|default('open') == 'open' ? 'selected' : '' }}>Open</option>
									<option value="in_progress" {{ ticket.status|default('') == 'in_progress' ? 'selected' : '' }}>In Progress</option>
									<option value="closed" {{ ticket.status|default('') == 'closed' ? 'selected' : '' }}>Closed</option>
								</select>
							</div>

							<!-- Priority Field -->
							<div>
								<label for="priority" class="block text-sm font-medium text-gray-700 mb-1">
									Priority
								</label>
								<select id="priority" name="priority" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none">
									<option value="low" {{ ticket.priority|default('medium') == 'low' ? 'selected' : '' }}>Low</option>
									<option value="medium" {{ ticket.priority|default('medium') == 'medium' ? 'selected' : '' }}>Medium</option>
									<option value="high" {{ ticket.priority|default('') == 'high' ? 'selected' : '' }}>High</option>
								</select>
							</div>
						</div>

						<!-- Form Actions -->
						<div class="flex gap-2 pt-2">
							<button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium shadow-md hover:shadow-lg">
								{{ action == 'create' ? 'Create Ticket' : 'Update Ticket' }}
							</button>
							<a href="/tickets" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition font-medium inline-block">
								Cancel
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>

		<!-- Footer -->
		<footer class="bg-gray-800 text-white py-6 mt-16">
			<div class="max-w-screen-xl mx-auto px-4 text-center">
				<p class="text-gray-300">
					&copy; 2025 TicketFlow. All rights reserved.
				</p>
			</div>
		</footer>
	</div>
{% endblock %}
